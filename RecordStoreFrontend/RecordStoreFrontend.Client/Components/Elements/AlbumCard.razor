<div>
    <div class="card has-background">
        <div class="card-image">
            <figure class="image is-square">
                <img src="Images/high-fidelity.jpg"
                     alt="Placeholder image" />
            </figure>
        </div>
    </div>
        <div class="card-header is-justify-content-center mt-3">
            <a href="@($"/Albums/{Album!.Id}")" class="title is-6 has-text-centered">@Album!.Name</a>
        </div>
        <div>
            <p class="has-text-centered">@Album!.Artist</p>
            <p class="has-text-centered">@Album!.ReleaseYear</p>
        </div>
</div>

@code {
    
    [Parameter]
    public AlbumReturnDto? Album { get; set; }
}