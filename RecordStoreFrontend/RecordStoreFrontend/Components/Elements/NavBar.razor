@rendermode InteractiveServer

<nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a class="navbar-item" href="/">
            <image src="Images/top-five-logo.png" width="75" height="40" />
        </a>
        <a role="button" class="navbar-burger @ToggleActive" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample" @onclick="()=>ToggleHamburger()">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

    <div class="navbar-menu @ToggleActive">
        <div class="navbar-start">
            <a class="navbar-item">
                Home
            </a>
            <a class="navbar-item">
                This Week's Top Five
            </a>
        </div>
        <div class="navbar-end">
            <div class="navbar-item">
                <div class="buttons">
                    <a class="button is-light">
                        <strong>Sign up</strong>
                    </a>
                    <a class="button is-dark">
                        Log in
                    </a>
                </div>
            </div>
        </div>
    </div>
</nav>

@code {
    string ToggleActive { get; set; } = "";

    private void ToggleHamburger()
    {
        ToggleActive = ToggleActive is "" ? "is-active" : "";
    }
}

