@inject IJSRuntime jsRuntime

<div>
    <div class="card has-background">
        <div class="card-image">
            <figure class="image is-square">
                <img src="Images/high-fidelity.jpg"
                alt="Placeholder image" />
            </figure>
        </div>
        <footer class="card-footer">
            <a href="@($"/Albums/{Album!.Id}/Edit")" class="card-footer-item has-text-warning">Edit</a>
            <a href="@($"/Albums/{Album!.Id}/Delete")" class="card-footer-item has-text-danger" type="button">Delete</a>
        </footer>
    </div>
</div>

@code {

    [Parameter]
    public AlbumReturnDto? Album { get; set; }

    private bool deleted = false;
}