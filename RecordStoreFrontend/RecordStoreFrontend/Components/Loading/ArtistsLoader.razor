@inject NavigationManager Navigation
@inject IHttpClientFactory ClientFactory
@page "/Artists"

@if (errorMessage != null)
{   
    <ErrorMessage Message="@errorMessage" />
}
else if (Artists == null)
{
    <Loading />
}
else
{
    <CascadingValue Value="Deleted">
        <CascadingValue Value="Artists">
            <ArtistsPage />
        </CascadingValue>
    </CascadingValue>
}

@code {
    [SupplyParameterFromQuery]
    public bool Deleted { get; set; }

    protected List<ArtistReturnDto>? Artists { get; set; }

    protected string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var client = ClientFactory.CreateClient("RecordStoreAPI");

            var response = await client.GetFromJsonAsync<List<ArtistReturnDto>>("Artists");

            Artists = response;
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occured: {ex.Message}";
        }
    }
}

